#!/bin/sh
#
# Do a self-update
#

. $(dirname $0)/common

# If not doing updates, exit quietly.
[ -n "${CONFIG_AUTO_UPDATE}" ] \
    || exit 0


UPDATE_DIR="${VAR}/update"

mkdir -p "${UPDATE_DIR}"
     
[ -d "${UPDATE_DIR}/.git" ] \
    || die "Unable to find sources in ${UPDATE_DIR}"

log update make -C "${UPDATE_DIR}" DEST="${TOP}" ROOT="${TOP}/root" update
